{
  "name": "earth-dashboard-be",
  "version": "1.0.0",
  "repository": "https://github.com/Lambda-School-Labs/earth-dashboard-be.git",
  "license": "MIT",
  "author": "William M. <wmooney1984@gmail.com>",
  "main": "index.js",
  "scripts": {
    "coverage": "CI=true yarn test --coverage --watchAll=false || true",
    "format": "yarn run prettier --write",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx .",
    "lint:fix": "eslint --fix --ignore-path .gitignore --ext .js,.jsx .",
    "prettier": "prettier \"**/*.+(js|jsx|json)\"",
    "server": "nodemon index.js",
    "start": "node index.js",
    "test": "cross-env DB_ENV=testing jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.+(js|json)": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/__tests__/**"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "knex": "^0.21.0",
    "knex-cleaner": "^1.3.0",
    "morgan": "^1.10.0",
    "pg": "^8.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/helmet": "^0.0.45",
    "@types/morgan": "^1.9.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jest-formatting": "^1.2.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-optimize-regex": "^1.1.7",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.5",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "sort-package-json": "^1.42.0",
    "supertest": "^4.0.2"
  }
}
